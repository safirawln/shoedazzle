extends ../layout/base
block content
    section.content-header
        h1
            | Add Stok
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Data Sepatu
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/stok/add' enctype='multipart/form-data')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',name='name',placeholder='Enter Name', autofocus).form-control
                                .form-group
                                    label
                                        | Deskripsi
                                    input(type='text',name='deskripsi',placeholder='Enter deskripsi').form-control
                                .form-group
                                    label
                                        | Stok
                                    input(type='text',name='stok',placeholder='Enter Stok').form-control
                                .form-group
                                    label
                                        | Merk
                                    input(type='text',name='merk',placeholder='Enter Merk').form-control
                                .form-group
                                    label
                                        | Harga
                                    input(type='text',name='harga',placeholder='Enter Harga').form-control
                                .form-group
                                    label
                                        | Gambar
                                    input(type='file',name='gambar')
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/stok/stokshoe').btn.btn-primary.pull-right
                                    | Back