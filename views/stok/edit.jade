extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Stok
			small menu for editing stok
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Data Sepatu
				.box-tools.pull-right
					button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form' method='post' action='/stok/edit/#{(id==undefined) ? data.id : id}' enctype='multipart/form-data')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button' data-dismiss='alert' aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama
									input(type='text' value="#{data.name}" name='name' placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Deskripsi
									input(type='text' value="#{ (deskripsi == undefined) ? data.deskripsi : deskripsi }" name='deskripsi' placeholder='Enter Deskripsi').form-control
								.form-group
									label
										| Stok
									input(type='text' value="#{ (stok == undefined) ? data.stok : stok }" name='stok' placeholder='Enter Stok').form-control
								.form-group
									label
										| Merk
									input(type='text' value="#{ (merk == undefined) ? data.merk : merk }" name='merk' placeholder='Enter Merk').form-control
								.form-group
									label
										| Harga
									input(type='text' value="#{ (harga == undefined) ? data.harga : harga }" name='harga' placeholder='Enter Harga').form-control
								.form-group
									label
										| Gambar
									input(type='file' name='gambar')
							.box-footer
								input(type="hidden" name="_method" value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/stok/stokshoe').btn.btn-primary.pull-right
									| Back